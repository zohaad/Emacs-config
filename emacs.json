{
  "title": "Emacs Keys",
  "rules": [
    {
      "description": "Emacs macOS keymap",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "tab",
            "modifiers": {
              "mandatory": ["left_control"]
            }
          },
          "to": [{
            "key_code": "tab",
            "modifiers": ["left_command"]
          }],
          "conditions": [{
            "type": "frontmost_application_if",
            "bundle_identifiers": ["^org\\.gnu\\.Emacs$"]
          }]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "tab",
            "modifiers": {
              "mandatory": ["left_command"]
            }
          },
          "to": [{
            "key_code": "tab",
            "modifiers": ["left_control"]
          }],
          "conditions": [{
            "type": "frontmost_application_if",
            "bundle_identifiers": ["^org\\.gnu\\.Emacs$"]
          }]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "left_command",
            "modifiers": {
              "optional": ["any"]
            }
          },
          "to": [{
            "key_code": "left_control"
          }],
          "conditions": [{
            "type": "frontmost_application_if",
            "bundle_identifiers": ["^org\\.gnu\\.Emacs$"]
          }]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "right_command",
            "modifiers": {
              "optional": ["any"]
            }
          },
          "to": [{
            "key_code": "left_alt"
          }],
          "conditions": [{
            "type": "frontmost_application_if",
            "bundle_identifiers": [
              "^org\\.gnu\\.Emacs$"
            ]
          }]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "left_control",
            "modifiers": {
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "left_command"
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^org\\.gnu\\.Emacs$"
              ]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "caps_lock",
            "modifiers": {
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "left_control"
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^org\\.gnu\\.Emacs$"
              ]
            }
          ]
        }
      ]
    }
  ]
}
